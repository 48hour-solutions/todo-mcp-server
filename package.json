{
  "name": "todo-mcp-server",
  "version": "1.0.0",
  "description": "A simple TypeScript MCP server for managing ordered task lists, perfect for Claude Desktop",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run lint && tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "server",
    "todo",
    "typescript",
    "ai-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 